<div class="grillaproducts">
    {{#each products}}
    <div class="cardProduct">
        <div class="cardImage">
             <img src="{{this.thumbnail}}" alt="{{this.name}}" onerror="this.onerror=null;this.src='sin imagen';">
        </div>
        <div class="cardInfo">
            <h3>{{this.title}}</h3>
            <p>{{this.id}}</p>
            <p>{{this.description}}</p>
            <p>{{this.price}}</p>
            <p>{{this.code}}</p>            
            <p>{{this.stock}}</p>             
        </div>
    </div>
    {{/each}}
</div>