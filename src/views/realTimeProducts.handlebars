<div class="container contenedor">
    <div class="load">
        <form id="load">
            <h3>Ingresar Producto</h3>
            <label for="title">Título:</label>
            <input type="text" id="title" name="title"><br><br>

            <label for="description">Descripción:</label>
            <input type="text" id="description" name="description"><br><br>

            <label for="thumbnail">Imagen:</label>
            <input type="text" id="thumbnail" name="thumbnail"><br><br>

            <label for="price">Precio:</label>
            <input type="number" id="price" name="price"><br><br>

            <label for="stock">Stock:</label>
            <input type="number" id="stock" name="stock"><br><br>

            <label for="code">Código:</label>
            <input type="text" id="code" name="code"><br><br>

            <label for="category">Categoria:</label>
            <input type="text" id="category" name="category"><br><br>

            <input id="btn_addproduct" type="submit" class="btn btn-primary" value="Agregar">
        </form>
    </div>
    <div class="delete">
        <form id="delete">
            <h3>Eliminar Producto</h3>
            <label>Producto Id:</label>
            <input type="text" id="id">
            <button id="btn_deleteproduct" class="btn btn-primary">Eliminar Producto</button>
        </form>
    </div>
</div>

<div class="container">
    <h3>Listado de Productos</h3>
    <div class="grillaproducts">
        {{#each products}}
        <div class="cardProduct">
            <div class="cardImage">
                <img src="{{this.thumbnail}}" alt="{{this.name}}" onerror="this.onerror=null;this.src='sin imagen';">
            </div>
            <div class="cardInfo">
                <h3>{{this.title}}</h3>
                <p>{{this.id}}</p>
                <p>{{this.description}}</p>
                <p>{{this.price}}</p>
                <p>{{this.stock}}</p>
                <p>{{this.code}}</p>
                <p>{{this.category}}</p>
            </div>
        </div>
        {{/each}}
    </div>
</div>